{% trans_default_domain 'FOSUserBundle' %}

<div class="panel white-alpha-90" >
    <div class="panel-heading">
        <div class="panel-title text-center"><h2>Olvido su <span class="text-primary">Contraseña</span></h2></div>
    </div>     
    <div class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <form id="loginform" class="form-horizontal" role="form" action="{{ path('fos_user_resetting_send_email') }}" method="post">
         {% if invalid_username is defined %}
          <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>             
        {% endif %}


            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input id="username" type="text" class="form-control" name="username"  placeholder="Ingrese su Correo electrónico ">                                        
            </div>
            
            <div class="input-group col-xs-12 text-center login-action">
                <div class="checkbox">
                    <label> 
                    <a href="{{ path('fos_user_security_login') }}" class="olvContr">Cancelar</a>                                                                    
                        <span id="btn-login"><input type="submit" id="submit" name="submit" class="btn btn-success" value="{{ 'resetting.request.submit'|trans }}" /></span>
                    </label>
                </div>
            </div>
            <div style="margin-top:10px" class="form-group">
                <div class="col-sm-12 controls">

                </div>
            </div>
        </form>     
    </div>                     
</div> 