    <script>
        $(document).ready(function () {
            $('#smartwizard').smartWizard({
                selected: 0,
                theme: 'arrows',
                transitionEffect: 'fade',
                toolbarSettings: {toolbarPosition: 'bottom',
                    toolbarExtraButtons: [
                        {label: 'Finalizar', css: 'btn-info  btn-finish', onClick: function () {
                                if (!$(this).hasClass('disabled')) {
                                    var elmForm = $("#atletas");
                                    if (elmForm) {
                                        elmForm.validator('validate');
                                        var elmErr = elmForm.find('.has-error');
                                        if (elmErr && elmErr.length > 0) {
                                            alert('Oops todavía tenemos errores en el formulario');
                                            return false;
                                        } else {
                                            alert('¡Estupendo! Estamos listos para enviar el formulario');
                                            elmForm.submit();
                                            return false;
                                        }
                                    }
                                }
                            }
                        },
                    ]
                }
            });

            // Initialize the leaveStep event
            $("#smartwizard").on("leaveStep", function (e, anchorObject, stepNumber) {
                var elmForm = $(".form-step-" + stepNumber);
                if (elmForm) {
                    elmForm.validator('validate');
                    var elmErr = elmForm.children('.has-error');
                    if (elmErr && elmErr.length > 0) {
                        // Error found
                        return false;
                    }
                }
                return true;
            });



        });
    </script>
    <!-- /jQuery Smart Wizard -->

