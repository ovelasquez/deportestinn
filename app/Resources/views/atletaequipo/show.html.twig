                            <tr>
                                <th>Talla de Chaqueta</th>
                                <td>{{ atletaEquipo.atleta.tallaChaqueta }}</td>
                            </tr>
                            <tr>
                                <th> Talla de Medias </th>
                                <td>{{ atletaEquipo.atleta.tallaMedias }}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                <div role="tabpanel" class="tab-pane fade" id="tab_content5" aria-labelledby="profile-tab">
                    <h2>Datos Deportivos</h2>
                    <br>
                    <table class="table table-striped responsive-utilities	">
                        <tbody>
                            <tr>
                                <th> Equipo :</th>
                                <td>{{ atletaEquipo.equipo.nombre }}</td>
                            </tr>
                            <tr>
                                <th> Status </th>
                                <td>{{ atletaEquipo.atleta.status }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab_content6" aria-labelledby="profile-tab">
                    <h2>Observaciones</h2>
                    <br>
                    <table class="table table-striped responsive-utilities	">
                        <tbody>
                            <tr>
                                <th> </th>
                                <td>{{ atletaEquipo.atleta.observacion }}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}