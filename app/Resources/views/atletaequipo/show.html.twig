                                <td>{{ atletaEquipo.atleta.contactoNombre }}</td>
                            </tr>
                            <tr>
                                <th>Teléfono Contacto</th>
                                <td>{{ atletaEquipo.atleta.contactoTelefono }}</td>
                            </tr>
                        </tbody>
