{% extends 'gentelella.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Campeonato <small>Editar</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle"
                                                data-toggle="dropdown" role="button" aria-expanded="false"><i
                                    class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a></li>
                                <li><a href="#">Settings 2</a></li>
                            </ul></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br /> 
                    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal form-label-left'} }) }} 
                    {{ form_errors(edit_form) }}

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="nombre">{{ form_label(edit_form.nombre) }} 
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.nombre) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="descripcion">{{ form_label(edit_form.descripcion) }} 
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.descripcion) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="inicio">{{ form_label(edit_form.inicio) }} 
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.inicio) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="fin">{{ form_label(edit_form.fin) }}
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.fin) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="ubicacion">{{ form_label(edit_form.ubicacion) }} 
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.ubicacion) }}</div>
                    </div>                                       

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="liga">{{ form_label(edit_form.liga) }} 
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.liga) }}</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="liga">{{ form_label(edit_form.logo) }} 
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.logo) }}</div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Editar</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
                <ul>	
                    <li><a href="{{ path('campeonatos_index') }}">Regresar a la lista</a></li>				
                    <li>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#campeonatos_inicio').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true
            },
                    function (start, end, label) {

                    });
            $('#campeonatos_fin').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true
            },
                    function (start, end, label) {

                    });
        });
    </script>
{% endblock %}