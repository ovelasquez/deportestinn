{% extends 'backend.html.twig' %} 
{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Campeonato <small>{{ campeonato.nombre }}</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle"
                                                data-toggle="dropdown" role="button" aria-expanded="false"><i
                                    class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a></li>
                                <li><a href="#">Settings 2</a></li>
                            </ul></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />

                    <table class="table table-striped responsive-utilities	">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ campeonato.id }}</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>{{ campeonato.nombre }}</td>
                            </tr>
                            <tr>
                                <th>Descripcion</th>
                                <td>{{ campeonato.descripcion }}</td>
                            </tr>
                            <tr>
                                <th>Inicio</th>
                                <td>{% if campeonato.inicio %}{{ campeonato.inicio|date('d-m-Y') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fin</th>
                                <td>{% if campeonato.fin %}{{ campeonato.fin|date('d-m-Y') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Ubicacion</th>
                                <td>{{ campeonato.ubicacion }}</td>
                            </tr>
                            <tr>
                                <th>Logo</th>
                                <td>{{ campeonato.logo }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <ul>
                        <li><a href="{{ path('campeonatos_index') }}">Regresar a la lista</a></li>
                        <li><a href="{{ path('campeonatos_edit', { 'id': campeonato.id }) }}">Editar</a></li>
                        <li>{{ form_start(delete_form) }} <input type="submit"
                                                                 value="Delete"> {{ form_end(delete_form) }}
                        </li>
                    </ul>

                </div>

            </div>

        </div>
    </div>

{% endblock %}