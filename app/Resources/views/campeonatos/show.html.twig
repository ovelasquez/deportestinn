{% extends 'backend.html.twig' %} 
{% block body %}

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Campeonato <small>Ver</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('campeonatos_new') }}">Agregar un Atleta</a></li>
                                <li><a href="{{ path('campeonatos_index') }}">Regresar a la lista</a></li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                        <div class="profile_img">
                            <div id="crop-avatar">
                                <!-- Current avatar -->
                                <img class="img-responsive avatar-view"  src="{{ asset('uploads/logos/campeonatos/')}}{{campeonato.logo}}" alt="{{campeonato.nombre}}" title="{{campeonato.nombre}}">
                            </div>


                        </div>
                        <h3>{{campeonato.nombre}}</h3>

                        <ul class="list-unstyled user_data">
                         <li>
                                <i class="fa fa-briefcase user-profile-icon"></i> Liga: {{ campeonato.liga.nombre }}
                            </li>
                            <li><i class="fa fa-map-marker user-profile-icon"></i> Ubicación: {{ campeonato.ubicacion}}</li>
                           
                        </ul>


                        <a class="btn btn-success" href="{{ path('campeonatos_edit', { 'id': campeonato.id }) }}"><i class="fa fa-edit m-right-xs"></i>Editar</a>
                        <br />



                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <div class="" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Información</a> </li>                                
                            </ul>
                            <div id="myTabContent" class="tab-content">
                                <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">                               
                                    <h2>Datos del Campeonato</h2>
                                    <br>
                                    <table class="table table-striped responsive-utilities	">
                                        <tbody>

                                            <tr>
                                                <th>Nombre</th>
                                                <td>{{ campeonato.nombre }}</td>
                                            </tr>
                                            <tr>
                                                <th>Descripción</th>
                                                <td>{{ campeonato.descripcion }}</td>
                                            </tr>
                                            <tr>
                                                <th>Ubicación</th>
                                                <td>{{ campeonato.ubicacion }}</td>
                                            </tr>
                                            <th>Fecha de inicio</th>
                                                <td>{{ campeonato.inicio|date('d-m-Y') }}</td>
                                            </tr>
                                            <th>Fecha de Culminación</th>
                                                <td>{{ campeonato.fin|date('d-m-Y') }}</td>
                                            </tr>                                            
                                        </tbody>
                                    </table>
                                </div>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
