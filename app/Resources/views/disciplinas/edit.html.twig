{% extends 'gentelella.html.twig' %}

{% block title %} Disciplinas {% endblock %}

{% block Titulo %} DeportesTINN {% endblock %}

{% block Subtitulo %} Disciplinas <small>Editar</small> {% endblock %} 

{% block cerrar %} href="{{ path('disciplinas_index')}}" {% endblock %}                
{% block body %}
    {% include "ComurImageBundle:Form:croppable_image_modal.html.twig" with {'include_jquery': false, 'include_bootstrap': false} %}
    <br /> 
    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal form-label-left'} }) }} 
    {{ form_errors(edit_form) }}

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12"
               for="nombre">{{ form_label(edit_form.nombre) }} <span
                class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.nombre,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
    </div>       

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12"
               for="first-name">{{ form_label(edit_form.logo) }} <span
                class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.logo,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>                    
    </div>

    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success">Editar</button>


        </div>
    </div>
    {{ form_end(edit_form) }}
    {{ form_start(delete_form) }}            
    <button type="submit" class="btn btn-danger">Eliminar</button>
    {{ form_end(delete_form) }}


{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/backend/vendors/holder.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>     
{% endblock %}