{% extends 'gentelella.html.twig' %} 
{% block title %} Disciplinas {% endblock %}
{% block Titulo %} DeportesTINN!!! {% endblock %}
{% block Subtitulo %} Disciplinas <small>Ver</small> {% endblock %} 
{% block cerrar %} href="{{ path('disciplinas_index')}}" {% endblock %}                  
{% block body %}
    <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
        <div class="profile_img">
            <div id="crop-avatar">
                <!-- Current avatar -->
                <img class="img-responsive avatar-view"  src="{{ asset('uploads/logos/disciplinas/')}}{{disciplina.logo}}" alt="{{disciplina.nombre}}" title="{{disciplina.nombre}}">
            </div>
        </div>
        <h3>{{disciplina.nombre}}</h3>
        <ul class="list-unstyled user_data">
            <li><i class="fa fa-briefcase user-profile-icon"></i> Disciplina: {{disciplina.nombre }}</li>                  
        </ul>
        <a class="btn btn-success" href="{{ path('disciplinas_edit', { 'id': disciplina.id }) }}"><i class="fa fa-edit m-right-xs"></i>Editar</a>
        <br />
    </div>
    <div class="col-md-9 col-sm-9 col-xs-12">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Informaci√≥n</a> </li>                                
            </ul>
            <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">                               
                    <h2>Datos de la Disciplina</h2>
                    <br>
                    <table class="table table-striped responsive-utilities	">
                        <tbody>

                            <tr>
                                <th>Nombre</th>
                                <td>{{ disciplina.nombre }}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    {% endblock %}