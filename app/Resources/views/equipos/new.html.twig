{% extends 'gentelella.html.twig' %}   
{% block title %} Equipos {% endblock %}
{% block Titulo %} DeportesTINN {% endblock %}
{% block Subtitulo %} Equipo <small>Crear</small> {% endblock %} 
{% block cerrar %} href="{{ path('equipos_index')}}" {% endblock %}                  
{% block body %}
    <br /> 
    {{ form_start(form, { 'attr': {'class': 'form-horizontal form-label-left'} }) }} 
    {{ form_errors(form) }}
    
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12"
               for="first-name">{{ form_label(form.equipoOrganizacionCampeonatoDisciplina) }} <span
                class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(form.equipoOrganizacionCampeonatoDisciplina,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12"
               for="first-name">{{ form_label(form.nombre) }} <span
                class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(form.nombre,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
    </div>

    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <a class="btn btn-primary" href="{{ path('equipos_index') }}" role="button">Cancelar</a>
            <button type="submit" class="btn btn-success">Crear</button>
        </div>
    </div>
    {{ form_end(form) }}            
{% endblock %}