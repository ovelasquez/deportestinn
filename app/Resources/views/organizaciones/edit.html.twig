{% extends 'backend.html.twig' %} 
{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Organizaciones <small>Editar</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle"
                                                data-toggle="dropdown" role="button" aria-expanded="false"><i
                                    class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a></li>
                                <li><a href="#">Settings 2</a></li>
                            </ul></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br /> 
                    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal form-label-left','data-parsley-validate':''} }) }}                     
                    {{ form_errors(edit_form) }}

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="nombre-name">{{ form_label(edit_form.nombre) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.nombre,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="abreviatura-name">{{ form_label(edit_form.abreviatura) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.abreviatura,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="logo-name">{{ form_label(edit_form.logo) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.logo,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="rif-name">{{ form_label(edit_form.rif) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.rif,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="telefono-name">{{ form_label(edit_form.telefono) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.telefono,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="email-name">{{ form_label(edit_form.email) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.email,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="responsable-name">{{ form_label(edit_form.responsable) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.responsable,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="direccion-name">{{ form_label(edit_form.direccion) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.direccion,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="campeonato-name">{{ form_label(edit_form.campeonato) }} <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">{{form_widget(edit_form.campeonato,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12"
                               for="disciplinas"> Disciplinas  <span
                                class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">

                            {% set i = 0 %}
                            {% for deporte in deportes %}                               
                                <input type="checkbox" name="disciplinas[]" id="disciplina{{i}}" value="{{deporte[1]}}" 
                                       {% if i == 1 %} data-parsley-mincheck="1" {% endif %}
                                       {% if deporte[2] == 1 %} checked {% endif %}
                                       required class="flat" />  {{deporte[0]}}
                                <br />
                                {% set i = i+1 %}
                            {% endfor %}

                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Editar</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
                <ul>	
                    <li><a href="{{ path('organizaciones_index') }}">Regresar a la lista</a></li>				
                    <li>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
        $(function () {
            $('.organizaciones').parsley().on('field:validated', function () {
                var ok = $('.parsley-error').length === 0;
                $('.bs-callout-info').toggleClass('hidden', !ok);
                $('.bs-callout-warning').toggleClass('hidden', ok);
            })
                    .on('form:submit', function () {
                        return true; // Don't submit form for this demo
                    });
        });
    </script>

{% endblock %} 
